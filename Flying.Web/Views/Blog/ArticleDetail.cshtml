@{
    Layout = "~/Views/Shared/_BlogLayoutDefault.cshtml";
}
@model Flying.Web.Models.ArticleViewModel
@using Flying.Common

<div class="post">
    <h2 class="title">
        @Html.ActionLink(Model.article.article_title.FlyToString(), "ViewArticle", "Blog", new { articleid = Model.article.article_id })
    </h2>
    <p class="meta">
        <span class="date">
            @Model.article..create_time.ToString("yyyy-MM-dd hh:mm:ss")
        </span>
        <span class="posted">
            Posted by <a href="#">@Model.article..user_name</a>
        </span>
    </p>
    <div style="clear: both;">&nbsp;</div>
    <div class="entry">
        <p>
            @Model.article.article_content
        </p>
        <p class="links">
            <a href="#" title="b0x" class="comments">评论</a>
        </p>
    </div>
    <div>
        评论:
        @if (Model.lstComment != null && Model.lstComment.Count > 0)
        {
            foreach (var obj in Model.lstComment)
            {
                <div>@obj.comment_title</div>
                <div>@obj.comment_content</div>
            }
        }
    </div>
</div>
